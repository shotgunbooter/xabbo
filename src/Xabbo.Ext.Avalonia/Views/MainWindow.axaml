<wnd:AppWindow
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:v="using:Xabbo.Ext.Avalonia.Views"
  xmlns:vm="using:Xabbo.Ext.Avalonia.ViewModels"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ic="using:FluentIcons.Avalonia.Fluent"
  xmlns:wnd="using:FluentAvalonia.UI.Windowing"
  xmlns:ui="using:FluentAvalonia.UI.Controls"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  x:Class="Xabbo.Ext.Avalonia.Views.MainWindow"
  x:DataType="vm:MainViewModel"
  Icon="/Assets/xabbo-skull-64.png"
  WindowStartupLocation="CenterScreen"
  SystemDecorations="None"
  Title="xabbo"
  Width="650" Height="700"
  MinWidth="400" MinHeight="400"
>

  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="32,*">
    <Grid.Styles>
      <Style Selector=":is(Control).overlay">
          <Setter Property="IsHitTestVisible" Value="true"/>
          <Setter Property="Opacity" Value="1"/>
          <Setter Property="Transitions">
              <Transitions>
                  <DoubleTransition Property="Opacity" Duration="0:0:0.8"/>
              </Transitions>
          </Setter>
      </Style>
      <Style Selector=":is(Control).imgoverlay">
          <Setter Property="RenderTransform" Value="scale(1)"/>
          <Setter Property="Transitions">
              <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.6"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.6"/>
              </Transitions>
          </Setter>
      </Style>
      <Style Selector=":is(Control).online">
        <Setter Property="IsHitTestVisible" Value="false"/>
        <Setter Property="Opacity" Value="0" />
      </Style>
      <Style Selector=":is(Control).imgoverlay.online">
        <Setter Property="RenderTransform" Value="scale(4)"/>
      </Style>
    </Grid.Styles>
    <Grid Name="TitleBarHost" ColumnDefinitions="48,*,Auto,0" ZIndex="1000">
      <Image
        Margin="0,8,0,-8"
        Source="avares://xabbo/Assets/xabbo-skull-128.png"
        Width="30" Height="30"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Column="1"
        VerticalAlignment="Center" FontSize="14" Text="{Binding Title}"
      />
      <ToggleButton
        Grid.Column="2" HorizontalAlignment="Right" BorderBrush="Transparent" Background="Transparent"
        Margin="0,0,4,0" Padding="4"
        Theme="{StaticResource TransparentButton}"
        IsChecked="{Binding Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=Topmost}"
      >
        <ic:SymbolIcon Symbol="Pin" FontSize="14" Classes.filled="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=Topmost}" />
      </ToggleButton>
    </Grid>
    <v:MainView Grid.Row="1" />
    <Grid Grid.Row="1"
      Background="{DynamicResource SolidBackgroundFillColorBase}"
      Classes="overlay"
      Classes.online="{DynamicResource IsConnected}"
    >
      <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      >
        <Grid>
          <Image
            Classes="imgoverlay"
            Classes.online="{DynamicResource IsConnected}"
            Source="avares://xabbo/Assets/xabbo-skull-64.png"
            Width="64" Height="64"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
          />
          <ui:ProgressRing Width="128" Height="128">
            <ui:ProgressRing.Styles>
              <Style Selector="ui|ProgressRing">
                <Setter Property="Opacity" Value="1" />
              </Style>
              <Style Selector=".online ui|ProgressRing">
                <Setter Property="Opacity" Value="0" />
              </Style>
            </ui:ProgressRing.Styles>
          </ui:ProgressRing>
        </Grid>
        <TextBlock
          FontSize="16"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
        >
          Waiting for connection...
        </TextBlock>
      </StackPanel>
    </Grid>
  </Grid>

</wnd:AppWindow>
